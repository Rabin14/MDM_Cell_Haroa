<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#540561"
    android:orientation="vertical"
    tools:context=".Mobile_Registration">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:text="New Mobile Registration"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:background="#540561"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/logo" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="#540561"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/background"
                android:ems="10"
               android:visibility="invisible"
                android:text="mobile"

                android:inputType="number"
                android:textAlignment="center"
                android:textColor="#030304"
                android:textColorHint="#7A7474"
                android:textSize="16sp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="#540561"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="vertical">
            <EditText
                android:id="@+id/number1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/background"
                android:ems="10"
                android:hint="Enter 10 digit Mobile Number"
                android:layout_marginBottom="10dp"

                android:inputType="number"
                android:textAlignment="center"
                android:textColor="#030304"
                android:textColorHint="#7A7474"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/number2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/background"
                android:ems="10"
                android:hint="ReEnter Mobile Number"

                android:inputType="number"
                android:textAlignment="center"
                android:textColor="#030304"
                android:textColorHint="#7A7474"
                android:textSize="16sp"
                android:textStyle="bold"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:clipToPadding="false"
            android:gravity="center"
            >

            <Button
                android:id="@+id/saveBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"

                android:textStyle="bold"
                android:background="@drawable/background2"
                android:text="Submit"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />



        </LinearLayout>

    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />


    </LinearLayout>