<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#540561"
    android:orientation="vertical"
    tools:context=".CCH_Details">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"

        android:fontFamily="@font/rammetto_one"
        android:text="CCH Details As Per Roll Strength"
        android:textAlignment="center"
        android:textColor="#FFFF00"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="@color/hintTextColor" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="10dp">


                <TextView
                    android:id="@+id/pp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="আপনাদের বিদ্যালয়ের মোট ছাত্র-ছাত্রীর সংখ্যা অনুপাতে যত জন কুক-কাম হেল্পার আছেন কেবলমাত্র সেই কয়জনের তথ্য এক এক করে এন্টার করে সাবমিট করুন।"
                    android:textAlignment="center"
                    android:textColor="#EFEF24"
                    android:textSize="17sp"

                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/shg_name"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="#fff"
                    android:ems="10"
                    android:hint="SHG (Group) Name"
                    android:textAlignment="center"
                    android:textColor="#030304"
                    android:textColorHint="#7A7474"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/cch_name"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="#fff"
                    android:ems="10"
                    android:hint="CCH Name"
                    android:textAlignment="center"
                    android:textColor="#030304"
                    android:textColorHint="#7A7474"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/mobile"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="#fff"
                    android:ems="10"
                    android:hint="Mobile Number"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="#030304"
                    android:textColorHint="#7A7474"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/caste"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="#fff"
                    android:ems="10"
                    android:hint="Caste"
                    android:textAlignment="center"
                    android:textColor="#030304"
                    android:textColorHint="#7A7474"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/account"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="#fff"
                    android:ems="10"
                    android:hint="Bank A/C Number"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="#030304"
                    android:textColorHint="#7A7474"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/bank_name"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="#fff"
                    android:ems="10"
                    android:hint="Bank Name"
                    android:textAlignment="center"
                    android:textColor="#030304"
                    android:textColorHint="#7A7474"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/branch_name"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="#fff"
                    android:ems="10"
                    android:hint="Branch Name"
                    android:textAlignment="center"
                    android:textColor="#030304"
                    android:textColorHint="#7A7474"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ifsc"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="#fff"
                    android:ems="10"
                    android:hint="IFSC Code"
                    android:textAlignment="center"
                    android:textColor="#030304"
                    android:textColorHint="#7A7474"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_add_item"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background2"
                    android:text="Submit"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/view"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/background2"
                    android:text="View"
                    android:onClick="view"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold" />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorPrimaryDark"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <TextView
                        android:id="@+id/school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:text="school"
                        android:textColor="#fff"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:text="category"
                        android:textColor="#fff"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/gp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:text="gp"
                        android:textColor="#fff"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:text="name"
                        android:textColor="#fff"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>