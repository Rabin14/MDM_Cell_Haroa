<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#540561"
    tools:context=".Coverage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:text="Daily MDM Coverage(Attendance)"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="21sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
           android:text="TodayDate"
            android:textColor="#EFEF24"
            android:textStyle="bold"
            android:textSize="20sp"

            android:inputType="date"
           />



        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false">


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/teachers"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/background"
                    android:ems="10"
                    android:hint="Total Teachers Attendance"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="#030304"
                    android:textColorHint="#7A7474"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/class_pp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/background"
                    android:ems="10"
                    android:hint="Class PP"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="#030304"
                    android:textColorHint="#7A7474"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/class_one"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/background"
                    android:ems="10"
                    android:hint="Class V"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="#030304"
                    android:textColorHint="#7A7474"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/class_two"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/background"
                    android:ems="10"
                    android:hint="Class I-IV/ VI-VIII"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="#030304"
                    android:textColorHint="#7A7474"
                    android:textSize="16sp"
                    android:textStyle="bold" />





                <Button
                    android:id="@+id/btn_add_item"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/background2"
                    android:text="Submit"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorPrimaryDark"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <TextView
                        android:id="@+id/school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:text="school"
                        android:textColor="#fff"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:text="category"
                        android:textColor="#fff"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/gp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:text="gp"
                        android:textColor="#fff"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:text="name"
                        android:textColor="#fff"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>